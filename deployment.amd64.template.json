{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "acr": {
                "username": "edgedeviceacr",
                "password": "0pFrK5/n2t1v21o0HPGsIW5l0O9bbhDfN0WZQe9qMz+ACRCkcr8T",
                "address": "edgedeviceacr.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.4",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.4",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "edgemonitor": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.edgemonitor.amd64.debug}",
              "createOptions": {}
            }
          },
          "messagedispatcher": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.messagedispatcher.amd64.debug}",
              "createOptions": {}
            }
          },
          "mqttclient": {
            "version": "1.4",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.mqttclient.amd64.debug}",
              "createOptions": {}
            }
          },
          "restendpoint": {
            "version": "1.4",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.restendpoint.amd64.debug}",
              "createOptions": {
                "ExposedPorts": {
                  "5678/tcp": {}
                },
                "HostConfig": {
                  "PortBindings": {
                    "5678/tcp": [
                      {
                        "HostPort": "5678"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.2",
        "routes": {
          "mqttclientTomessagedispatcher": "FROM /messages/modules/mqttclient/outputs/mqttclientOutput INTO BrokeredEndpoint(\"/modules/messagedispatcher/inputs/inputFromMQTT\")",
          "messagedispatcherToIoTHub": "FROM /messages/modules/messagedispatcher/outputs/messagedispatcherOutput INTO BrokeredEndpoint(\"/modules/edgemonitor/inputs/inputFromMessageDispatcher\")",
          "edgemonitorToIoTHub": "FROM /messages/modules/edgemonitor/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "edgemonitor": {
      "properties.desired": {
        "TelemetryInterval" : 10
      }
    }
  }
}